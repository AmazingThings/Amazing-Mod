package com.github.AmazingThings.Amazing_Mod.block;

import java.util.Random;

import javax.swing.Icon;

import com.github.AmazingThings.Amazing_Mod.AmazingMain;
import com.github.AmazingThings.Amazing_Mod.tileentity.TileEntityElectricFurnace;

import cpw.mods.fml.relauncher.Side;
import cpw.mods.fml.relauncher.SideOnly;
import net.minecraft.block.Block;
import net.minecraft.block.BlockContainer;
import net.minecraft.block.material.Material;
import net.minecraft.client.renderer.texture.IIconRegister;
import net.minecraft.entity.EntityLivingBase;
import net.minecraft.entity.item.EntityItem;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.init.Blocks;
import net.minecraft.inventory.Container;
import net.minecraft.inventory.IInventory;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.nbt.NBTTagCompound;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.tileentity.TileEntityFurnace;
import net.minecraft.util.IIcon;
import net.minecraft.util.MathHelper;
import net.minecraft.world.World;

public class ElectricFurnace extends BlockContainer {

	@SideOnly(Side.CLIENT)
	private IIcon top;
	@SideOnly(Side.CLIENT)
	private IIcon front;
	
	private static boolean isBurning;
	private final boolean isBurning2;
	private final Random rand = new Random();
	
	public ElectricFurnace(boolean isActive) {
		super(Material.iron);
		isBurning2 = isActive;
	}
	
	@SideOnly(Side.CLIENT)
	public void registerBlockIcons(IIconRegister reg){
		this.blockIcon = reg.registerIcon(AmazingMain.modid + ":ElectricFurnaceSide");
		this.top = reg.registerIcon(AmazingMain.modid + ":ElectricFurnaceTop");
		this.front = reg.registerIcon(isBurning2 ? AmazingMain.modid + ":ElectricFurnaceFrontOn" : AmazingMain.modid + ":ElectricFurnaceFront");
	}
	
	public IIcon getIcon(int side, int meta){
		switch(side){
		case 1:
			return top;
		case 3:
			return front;
		case 0:
			return top;
		default:
			return this.blockIcon;
		}
	}

	@Override
	public TileEntity createNewTileEntity(World p_149915_1_, int p_149915_2_) {
		return new TileEntityElectricFurnace();
	}

}
